---
import PostListPage from '#astro//components/PostListPage.astro';
import { getStaticPathsSub } from '#astro//lib/posts';

import { postsPath as path } from '#astro//endpoints.js'
import { ensureEndpointPathCorrect } from '#astro//misc.js';
ensureEndpointPathCorrect(path, import.meta.url);

export async function getStaticPaths({ paginate }) {
  return await getStaticPathsSub({ paginate });
}

const {} = Astro.params as { year: string };
const { page } = Astro.props;

let title = `Posts`;
if (page.lastPage > 1) {
  title += ` (Page ${page.currentPage} of ${page.lastPage})`;
}
---
<PostListPage title={title} page={page} />
